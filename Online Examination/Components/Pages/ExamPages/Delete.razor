@page "/exams/delete"
@using Microsoft.EntityFrameworkCore
@using Online_Examination.Domain
@inject IDbContextFactory<Online_Examination.Data.Online_ExaminationContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Exam</h2>
    <hr />
    @if (exam is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@exam.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@exam.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">TimeLimitMinutes</dt>
            <dd class="col-sm-10">@exam.TimeLimitMinutes</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatorId</dt>
            <dd class="col-sm-10">@exam.CreatorId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@exam.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@exam.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@exam.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@exam.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="exam" OnValidSubmit="DeleteExam" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(exam is null)">Delete</button> |
            <a href="/exams">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Exam? exam;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        exam = await context.Exams.FirstOrDefaultAsync(m => m.Id == Id);

        if (exam is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteExam()
    {
        using var context = DbFactory.CreateDbContext();
        context.Exams.Remove(exam!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/exams");
    }
}
