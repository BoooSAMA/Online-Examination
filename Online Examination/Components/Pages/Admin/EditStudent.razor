@page "/edit-student/{UserId}"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@layout MainLayout
@inject UserManager<Online_ExaminationUser> UserManager
@inject NavigationManager Navigation
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Identity
@using Online_Examination.Domain

<PageTitle>Edit Student | Examination Board</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            @if (isLoading)
            {
                <div class="text-center mt-5">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading student...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading student data...</p>
                </div>
            }
            else if (student == null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Student not found.
                    <a href="/modify-students" class="btn btn-sm btn-primary ms-3">Back to Student List</a>
                </div>
            }
            else
            {
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">
                            <i class="bi bi-person-badge"></i> Edit Student Details
                        </h3>
                    </div>
                    <div class="card-body p-4">
                        <EditForm Model="@student" OnValidSubmit="@(() => HandleSaveStudent())">
                            <DataAnnotationsValidator />

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="bi bi-exclamation-triangle"></i> @errorMessage
                                    <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(successMessage))
                            {
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="bi bi-check-circle"></i> @successMessage
                                    <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
                                </div>
                            }

                            <!-- Student Information -->
                            <div class="card mb-4 border-light">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0 text-dark">
                                        <i class="bi bi-info-circle text-primary"></i> Basic Information
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <label for="email" class="form-label">
                                            Email <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-envelope"></i>
                                            </span>
                                            <InputText id="email" 
                                                      class="form-control" 
                                                      @bind-Value="student.Email" 
                                                      placeholder="student@example.com" />
                                        </div>
                                        <ValidationMessage For="@(() => student.Email)" />
                                    </div>

                                    <div class="mb-3">
                                        <label for="username" class="form-label">
                                            Username <span class="text-danger">*</span>
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-person"></i>
                                            </span>
                                            <InputText id="username" 
                                                      class="form-control" 
                                                      @bind-Value="student.UserName" 
                                                      placeholder="studentuser" />
                                        </div>
                                        <ValidationMessage For="@(() => student.UserName)" />
                                        <small class="text-muted">This is the unique identifier for login.</small>
                                    </div>

                                    <div class="mb-3">
                                        <label for="phone" class="form-label">
                                            Phone Number
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bi bi-phone"></i>
                                            </span>
                                            <InputText id="phone" 
                                                      class="form-control" 
                                                      @bind-Value="student.PhoneNumber" 
                                                      placeholder="+1234567890" />
                                        </div>
                                        <small class="text-muted">Optional contact number for the student.</small>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label text-muted">Account Created</label>
                                        <div class="p-2 bg-light rounded">
                                            <i class="bi bi-calendar-check text-success"></i>
                                            @if (student.CreatedDate != default)
                                            {
                                                <span>@student.CreatedDate.ToString("MMMM dd, yyyy hh:mm tt")</span>
                                            }
                                            else
                                            {
                                                <span>Not available</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Password Reset Section -->
                            <div class="card mb-4 border-warning">
                                <div class="card-header bg-warning bg-opacity-10">
                                    <h5 class="mb-0 text-dark">
                                        <i class="bi bi-key-fill text-warning"></i> Password Management
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="text-muted mb-3">
                                        <i class="bi bi-info-circle"></i> 
                                        Reset the student's password to the default password for testing purposes.
                                    </p>
                                    <button type="button" 
                                            class="btn btn-warning" 
                                            @onclick="ResetPassword"
                                            disabled="@isResettingPassword">
                                        @if (isResettingPassword)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                            <span>Resetting...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-arrow-clockwise"></i>
                                            <span>Reset Password to "Student123"</span>
                                        }
                                    </button>
                                    @if (!string.IsNullOrEmpty(passwordResetMessage))
                                    {
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="bi bi-check-circle"></i> @passwordResetMessage
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between">
                                <a href="/modify-students" class="btn btn-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        <span>Saving Changes...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-save"></i>
                                        <span>Save Changes</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    private Online_ExaminationUser? student;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private string passwordResetMessage = string.Empty;
    private bool isSaving = false;
    private bool isLoading = true;
    private bool isResettingPassword = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            student = await UserManager.FindByIdAsync(UserId);

            if (student == null)
            {
                errorMessage = "Student not found.";
            }
            else
            {
                // Verify user is actually a student
                var roles = await UserManager.GetRolesAsync(student);
                if (!roles.Contains("Student"))
                {
                    errorMessage = "This user is not a student.";
                    student = null;
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading student: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleSaveStudent()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (student == null)
        {
            errorMessage = "Student data is not loaded.";
            return;
        }

        if (string.IsNullOrWhiteSpace(student.Email))
        {
            errorMessage = "Email is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(student.UserName))
        {
            errorMessage = "Username is required.";
            return;
        }

        try
        {
            isSaving = true;

            var result = await UserManager.UpdateAsync(student);

            if (result.Succeeded)
            {
                successMessage = $"Student '{student.UserName}' updated successfully!";
                
                await Task.Delay(1500);
                Navigation.NavigateTo("/modify-students");
            }
            else
            {
                errorMessage = "Failed to update student: " + string.Join(", ", result.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating student: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task ResetPassword()
    {
        if (student == null) return;

        passwordResetMessage = string.Empty;
        errorMessage = string.Empty;

        try
        {
            isResettingPassword = true;

            // Remove existing password
            var removePasswordResult = await UserManager.RemovePasswordAsync(student);
            if (!removePasswordResult.Succeeded)
            {
                errorMessage = "Failed to reset password: " + string.Join(", ", removePasswordResult.Errors.Select(e => e.Description));
                return;
            }

            // Add new password
            var addPasswordResult = await UserManager.AddPasswordAsync(student, "Student123");
            if (addPasswordResult.Succeeded)
            {
                passwordResetMessage = "Password successfully reset to 'Student123'";
            }
            else
            {
                errorMessage = "Failed to set new password: " + string.Join(", ", addPasswordResult.Errors.Select(e => e.Description));
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error resetting password: {ex.Message}";
        }
        finally
        {
            isResettingPassword = false;
        }
    }
}
