@page "/modify-students"
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin")]
@inject UserManager<Online_ExaminationUser> UserManager
@inject NavigationManager Navigation
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Identity
@using Online_Examination.Domain

<PageTitle>Manage Students | Examination Board</PageTitle>

<div class="container mt-4">
<!-- Back to Dashboard Button -->
<div class="row mb-3">
    <div class="col-12">
        <a href="/admin-dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="display-6 fw-bold text-dark">
                    <i class="bi bi-people-fill text-primary"></i> Student Management
                </h2>
                <p class="text-muted">View and manage all registered students</p>
            </div>
            <div>
                <span class="badge bg-primary fs-5 px-3 py-2">
                    @students.Count Students
                </span>
            </div>
        </div>
    </div>
</div>

    @if (isLoading)
    {
        <div class="text-center mt-5">
            <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Loading students...</span>
            </div>
            <p class="mt-3 text-muted">Loading student list...</p>
        </div>
    }
    else if (!students.Any())
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center p-5">
                        <i class="bi bi-person-x text-muted mb-3" style="font-size: 4rem;"></i>
                        <h4 class="mb-3">No Students Found</h4>
                        <p class="text-muted mb-4">There are no registered students in the system yet.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Search Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <div class="input-group">
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" 
                                           class="form-control" 
                                           placeholder="Search by name, email, or username..." 
                                           @bind="searchQuery"
                                           @bind:event="oninput" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <span class="badge bg-info fs-6 p-2 w-100">
                                    @filteredStudents.Count Results
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Students Table -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 text-dark">
                            <i class="bi bi-list-ul text-primary"></i> Registered Students
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Email</th>
                                        <th class="py-3">Username</th>
                                        <th class="py-3">Phone Number</th>
                                        <th class="py-3">Registered</th>
                                        <th class="py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in filteredStudents)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-envelope-fill text-primary me-2"></i>
                                                    <strong>@student.Email</strong>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <span class="text-dark">@student.UserName</span>
                                            </td>
                                            <td class="py-3">
                                                @if (!string.IsNullOrEmpty(student.PhoneNumber))
                                                {
                                                    <i class="bi bi-phone text-success me-1"></i>
                                                    <span>@student.PhoneNumber</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="py-3 text-muted small">
                                                @if (student.CreatedDate != default)
                                                {
                                                    <div>@student.CreatedDate.ToString("MMM dd, yyyy")</div>
                                                    <div class="text-muted">@student.CreatedDate.ToString("hh:mm tt")</div>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="py-3 text-center">
                                                <a href="/edit-student/@student.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- No Results Message -->
        @if (!filteredStudents.Any() && students.Any())
        {
            <div class="row mt-3">
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> No students match your search criteria.
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<Online_ExaminationUser> students = new List<Online_ExaminationUser>();
    private bool isLoading = true;
    private string searchQuery = string.Empty;

    private List<Online_ExaminationUser> filteredStudents => students
        .Where(s => string.IsNullOrEmpty(searchQuery) || 
                    (s.Email?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (s.UserName?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false) ||
                    (s.PhoneNumber?.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ?? false))
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        try
        {
            isLoading = true;
            students = (await UserManager.GetUsersInRoleAsync("Student")).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading students: {ex.Message}");
            students = new List<Online_ExaminationUser>();
        }
        finally
        {
            isLoading = false;
        }
    }
}
